 contador=contador+1;
 print("Se le suma 1");
 }//cierre del IF
 else{
 value2=(#EBDEF7);
 pantalla=pantalla-1;
 contador=contador-1;
 print("Se le resta 1");
   }  //cierre del ELSE
  }  //cierre del  IF CONTADOR
  else if(contador==2){
  if(value2==0){
    value2=(#EBDEF7);
    pantalla=pantalla-1;
    contador=contador-1;
    }  //cierre IF value1
  }  //cierre del ELSE-IF1
}  //cierre del RECTANGULO2
