  if(contador<2){
 if(value6==#F58A8A){
 value6=0;
 pantalla=pantalla+1;
 rect(x6,y6,a6,b6);
 contador=contador+1;
 print("Se le suma 1");
 }//cierre del IF
 else{
 value6=#F58A8A;
 pantalla=pantalla-1;
 contador=contador-1;
 print("Se le resta 1");
   }  //cierre del ELSE
  } //cierre del IF CONTADOR
  else if(contador==2){
  if(value6==0){
    value6=#F58A8A;
    pantalla=pantalla-1;
    contador=contador-1;
    }  //cierre IF value1
  }  //cierre del ELSE-IF1
}  //cierre del RECTANGULO6

